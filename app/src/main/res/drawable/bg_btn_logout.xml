<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base glass -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#15EF4444" />
        </shape>
    </item>

    <!-- Red glow from left -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#25EF4444"
                android:centerColor="#10EF4444"
                android:endColor="@android:color/transparent"
                android:centerX="0.3"
                android:centerY="0.3" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#30EF4444" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
