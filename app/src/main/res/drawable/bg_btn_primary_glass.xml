<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <layer-list>
            <!-- Base orange glass -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#30FF6B00" />
                </shape>
            </item>
            <!-- Light beam -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <gradient
                        android:type="linear"
                        android:angle="315"
                        android:startColor="#40FF6B00"
                        android:centerColor="#15FF6B00"
                        android:endColor="@android:color/transparent"
                        android:centerX="0.3"
                        android:centerY="0.3" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#50FF6B00" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
