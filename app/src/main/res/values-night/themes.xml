<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Group2k25" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Orange -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>

        <!-- Accent Green -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_dark</item>

        <!-- Dark Surfaces -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        <item name="colorOutline">@color/border_dark</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Splash screen (Android 12+) -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/background_dark</item>
    </style>
</resources>
